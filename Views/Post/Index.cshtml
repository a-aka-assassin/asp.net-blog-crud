@model PostViewModel

@{
    ViewData["Title"] = "Post Page";
}

<div class="text-center">
    <h1 class="display-4">Posts</h1>
    </div>

<div class="text-right">
    <a asp-controller="Post" asp-action="NewPost">New Post</a>
</div>

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
        <div class="posts-containter">
            @foreach (var post in Model.PostList)
            {
                <div class="post">
                    <h2><a asp-area = "" asp-controller="Post" asp-action="ViewPost" asp-route-id="@post.Id">@post.Title</a></h2>
                    <h5 class="text-muted">@post.UpdatedAt</h5>
                    <p>@post.Body</p>
                </div>
            }
        </div>
    </div>
</div>